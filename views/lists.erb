<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li class=<%= list_class(list) %>>
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].count { |todo| todo[:completed] } %> / <%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new" class='add'>New List</a>
<% end %>